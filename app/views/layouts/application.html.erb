<!DOCTYPE html>
<html>
  <head>
    <title>Flixit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="shortcut icon" type="image/png" sizes="32x32" href="<%= image_url("favicon-32x32.png") %>">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
        integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">


    <script type="text/javascript">
      window.logo = "<%= image_url('redlogo.png') %>"
      window.logo1 = "<%= image_url('redlogo-1.png') %>"
      window.fpImage = "<%= image_url('movies-background.jpg') %>"
      window.icon = "<%= image_url('profile-icon.png') %>" 
      window.auth = "<%= image_url('Auth.png')  %>"
      window.show = "<%= image_url('Show.png')  %>"
    </script>

  </head>

  <body>
    <div id="root">
    </div>
    
    <%= yield %>
  </body>
</html>
